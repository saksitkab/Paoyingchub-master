<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.parkt_000.paoyingchub.Player_statistic"
    android:id="@+id/bgplayershow"
    android:background="#ff67ff8d">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Player Profile"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Username"
        android:id="@+id/profile_name"
        android:layout_marginTop="162dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Win"
        android:id="@+id/profile_win_text"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="lose"
        android:id="@+id/profile_lose_text"
        android:layout_below="@+id/profile_win_text"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="draw"
        android:id="@+id/profile_draw_text"
        android:layout_below="@+id/profile_lose_text"
        android:layout_marginTop="51dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="win streak"
        android:id="@+id/profile_winstreak_text"
        android:layout_below="@+id/profile_draw_text"
        android:layout_marginTop="70dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/profile_win"
        android:background="#fff6fff7"
        android:layout_above="@+id/profile_lose_text"
        android:layout_alignStart="@+id/profile_lose" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/profile_draw"
        android:layout_above="@+id/profile_winstreak_text"
        android:layout_toEndOf="@+id/profile_winstreak_text"
        android:background="#fff0ffec" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/profile_winstreak"
        android:background="#ffe7fffa"
        android:layout_alignTop="@+id/profile_winstreak_text"
        android:layout_alignStart="@+id/profile_draw" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/profile_lose"
        android:background="#fff8ffeb"
        android:layout_above="@+id/profile_draw_text"
        android:layout_alignStart="@+id/profile_draw" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/profile_username"
        android:layout_alignBottom="@+id/profile_name"
        android:layout_toEndOf="@+id/profile_name"
        android:background="#ffecffef" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_avatar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="No Game"
        android:id="@+id/textView8"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/profile_allgame"
        android:layout_alignTop="@+id/textView8"
        android:layout_toEndOf="@+id/profile_winstreak_text"
        android:background="#ffffffff" />

</RelativeLayout>
